<h2 class="card-title">{{name}}</h2>
<div class="card">

    <div class="card-body">
        <p class="card-text"><b>Capital: </b>{{capital}}</p>
        <p class="card-text"><b>Population: </b>{{population}}</p>
        <p class="card-text"><b>Languages: </b></p>
        <ul>
            {{#each languages}}
            <li class="list-group-item">{{this.name}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="card-img">
        <img class="flag-img" src="{{flag}}" alt="{{name}}">
    </div>
</div>